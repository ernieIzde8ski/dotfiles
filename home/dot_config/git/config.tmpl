[user]
    name       = Ernest Izdebski
    # TODO: switch to a ratbot.org email
    email      = {{ .gpgEmail | quote }}
    signingKey = {{ .gpgSigningKey | quote }}

[alias]
    amend = "commit --amend"
    cm    = "!git -C '{{ .chezmoi.homeDir }}/.local/share/chezmoi/'"
    graph = "log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all"
    patch = "add --patch"
    pushf = "push --force-with-lease"
    ps    = "-p status"
    recommit   = "!git commit -eF $(git rev-parse --git-dir)/COMMIT_EDITMSG"
    root  = "rev-parse --show-toplevel"
    track = "add -AN"
    wd    = "diff --word-diff"
    word-patch = "!git -c interactive.diffFilter='diff-highlight | less -FRX --tabs=4' add --patch"

[branch]
    sort = -committerdate

[commit]
    cleanup     = "strip"
    gpgSign     = true

[core]
    autocrlf    = false
    protectHFS  = true
    protectNTFS = true
    eol         = "lf"

{{ if lookPath "nvimdiff" -}}

[diff]
    prompt  = false
    tool    = "nvimdiff"

{{ end -}}

[help]
    autocorrect = prompt

[init]
    defaultBranch = master

[push]
    autoSetupRemote = true

[pull]
    rebase = true

[rebase]
    abbreviateCommands  = true
    autoSquash          = true
    autoStash           = true
    missingCommitsCheck = "error"

[rerere]
    autoUpdate  = true
    enabled     = true

[status]
    aheadBehind         = true
    branch              = true
    relativePaths       = false
    renames             = "copy"
    showStash           = true
    showUntrackedFiles  = normal

{{ if lookPath "gh" -}}

[credential "https://github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
    helper =
    helper = !/usr/bin/gh auth git-credential

{{ end -}}
